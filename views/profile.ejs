<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Profile for <%= user.local.email %></title>
	<!-- Bootstrap base -->
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

    <!-- My styles -->
    <link href="/css/profile.css" rel="stylesheet">
</head>
<body>
<div class="navbar-wrapper">
  <div class="container">
    <div class="row">
      <div class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">J.Allen</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="/">Home</a></li>
              <li><a href="#">Magic</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Music <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">My Music</a></li>
                  <li><a href="/reviews">Reviews</a></li>
                </ul>
              </li>
            </ul>
            <ul class="nav navbar-nav pull-right">
             <% if (typeof user == 'undefined') { %>
                <li><a href='/login'>Login</a></li>
                <li><a href='/signup'>Sign Up</a></li>
              <% } else { %>
                <li><a href='/profile'><%= user.local.username %></a></li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>Email</strong>: <%= user.local.email %><br>
					</p>

          <p>
            <strong>Avatar</strong>: <img src=<%= user.local.avatar %> height="75" width="75"><br>
          </p>

          <p>
            <form method="POST">
              <input type="hidden" name="_method" value="put">
              <strong>Change avatar (enter URL)</strong>:
              <input id="avatar-input" type="text" name="avatar">
              <br><br>
              <button class="btn btn-default" id="profile-submit" type="submit">Submit new avatar</button>
            </form>
			</div>
		</div>
	</div>
</div>
  <!-- Bootstrap core JavaScript
  ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="/lib/jquery/jquery-1.11.1.min.js"></script>
  <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

</html>