<!doctype html>
<html>
<head>
	<title>Music Reviews</title>

	<!-- Bootstrap base -->
  <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

  <!-- My styles -->
  <link href="/css/reviews-ind.css" rel="stylesheet">
</head>
<body>
    <div class="navbar-wrapper">
      <div class="container">
        <div class="row">
          <div class="navbar navbar-inverse navbar-static-top" role="navigation">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">J.Allen</a>
              </div>
              <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                  <li><a href="#">Home</a></li>
                  <li><a href="#">Magic</a></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Music <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">My Music</a></li>
                      <li><a href="/reviews">Reviews</a></li>
                    </ul>
                  </li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                  <% if(typeof user == 'undefined'){ %>
                    <li><a href='/login'>Login</a></li>
                    <li><a href='/signup'>Sign Up</a></li>
                  <% } else { %>
                    <li><a href='/profile'><%= user.local.email %></a></li>
                  <% } %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container" ng-app="indReviewApp" ng-controller="indReviewController">
      <div class="row">
        <div class="review-main" >
          <div class="col-md-12 review-head">
            <img class="col-md-4" src="{{review.cover}}" width="100%">
            <h1 class="col-md-8 review-title">{{review.album}}</h1>
            <h2 class="col-md-8">{{review.artist}}</h2>
            <p class="col-md-8 review-rating">{{review.rating}}/10</p>
          </div>
          <div class="review-content col-md-8">
            <p>{{review.content}}</p>
          </div>
        </div>
        <div class="comment-main col-md-8">
          <h1>Comments</h1>
          <div class="col-md-8">
            <div class="comment-ind" ng-repeat="comment in Review.comments">
              <p>{{comment.content}}</p>
            </div>

            <form action="http://jtbosujallen:8882/reviews/54413250d43d8e6a5ed871a1" method="POST" id="review-comment">
              <input type="hidden" name="_method" value="put">
              <input type="textarea" class="form-control" id="comment-content" placeholder="Enter comment here">
              <button class="btn btn-default" id="comment-submit" type="submit" form="review-comment">Post</button>
            </form>
          </div>
      </div>
    </div>
    <script src="/lib/angular/angular.min.js"></script>
    <script src="/js/indReviewController.js"></script>
</body>